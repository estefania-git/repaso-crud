<div class="container coasters-index">

  <a href="/coasters" class="btn btn-dark">Crear nueva montaña rusa</a>

  <h1 style="font-weight: 100">Índice de montañas rusas</h1>
  {{#each coaster}}
  <hr>
  <a href="#" class="btn btn-sm btn-dark">Ver detalles</a>
  <h4>{{name}}</h4>
  <p>{{description}}</p>

  <small><strong>Longitud: </strong> {{length}} | <strong>Inversiones: </strong> {{inversions}} | <strong>Parque:
    </strong>
    {{parks.[0].name}}</small>
  {{/each}}




</div>